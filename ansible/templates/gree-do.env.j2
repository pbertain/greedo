# Gree.do Environment Configuration
FLASK_APP=app.py
FLASK_ENV={{ environment }}
PORT={{ app_port }}
DEBUG={{ 'true' if environment == 'dev' else 'false' }}

# Application Settings
SECRET_KEY={{ ansible_date_time.epoch | hash('md5') }}-{{ environment }}-gree-do

# Star Wars Time Settings
DEFAULT_TZ=America/Los_Angeles

# Security Headers
FORCE_HTTPS={{ 'false' if environment == 'dev' else 'true' }}

# Logging
LOG_LEVEL={{ 'DEBUG' if environment == 'dev' else 'INFO' }}