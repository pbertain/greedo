# Gree.do Environment Configuration
FLASK_APP=app.py
FLASK_ENV={{ env }}
PORT={{ app_port }}
DEBUG={{ 'true' if env == 'dev' else 'false' }}

# Application Settings
SECRET_KEY={{ ansible_date_time.epoch | hash('md5') }}-{{ env }}-gree-do

# Star Wars Time Settings
DEFAULT_TZ=America/Los_Angeles

# Security Headers
FORCE_HTTPS={{ 'false' if env == 'dev' else 'true' }}

# Logging
LOG_LEVEL={{ 'DEBUG' if env == 'dev' else 'INFO' }}